{
  "name": "colorful-titlebar",
  "displayName": "Colorful Titlebar",
  "description": "A VS Code extension that adds backgroudColor(generated by your project name) to the title bar",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Themes"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "colorful-titlebar.clear",
        "title": "Clear Titlebar Color of current workspace",
        "category": "Colorful Titlebar"
      },
      {
        "command": "colorful-titlebar.enable",
        "title": "Enable Colorful Titlebar",
        "category": "Colorful Titlebar"
      },
      {
        "command": "colorful-titlebar.disable",
        "title": "Disable Colorful Titlebar",
        "category": "Colorful Titlebar"
      }
    ],
    "configuration": {
      "title": "Colorful Titlebar",
      "properties": {
        "colorful-titlebar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the colorful titlebar effect"
        },
        "colorful-titlebar.showInfoPop": {
          "type": "boolean",
          "default": true,
          "description": "Whether to show information messages."
        },
        "colorful-titlebar.hashSource": {
          "type": "string",
          "enum": [
            "projectName",
            "fullPath",
            "projectNameDate"
          ],
          "default": "projectName",
          "description": "Source for generating hash-based colors. Use 'projectName' for project folder name only, or 'fullPath' for complete project path.",
          "enumDescriptions": [
            "Generate color hash from project folder name only",
            "Generate color hash from complete project path, so same project in different locations will have different colors",
            "Generate color hash from project name and date, making it unique everyday"
          ]
        },
        "colorful-titlebar.lightThemeColors": {
          "type": "array",
          "default": [
            "rgb(167, 139, 250)",
            "rgb(147, 197, 253)",
            "rgb(128, 203, 196)",
            "rgb(172, 243, 157)",
            "rgb(250, 204, 21)",
            "rgb(253, 151, 31)",
            "rgb(251, 113, 133)"
          ],
          "description": "Colors to generate gradient for project-based titlebar color selection in light themes.  Supports `#RRGGBB`, `#RRGGBBAA`, `rgb(R,G,B)`, `rgba(R,G,B,A)`, `hsl(H,S,L)`, `hsla(H,S,L,A)`.",
          "items": {
            "type": "string"
          }
        },
        "colorful-titlebar.darkThemeColors": {
          "type": "array",
          "default": [
            "rgb(68, 0, 116)",
            "rgb(0, 47, 85)",
            "rgb(0, 66, 66)",
            "rgb(0, 75, 28)",
            "rgb(124, 65, 1)",
            "#721a1a"
          ],
          "description": "Colors to generate gradient for project-based titlebar color selection in dark themes. Supports `#RRGGBB`, `#RRGGBBAA`, `rgb(R,G,B)`, `rgba(R,G,B,A)`, `hsl(H,S,L)`, `hsla(H,S,L,A)`.",
          "items": {
            "type": "string"
          }
        },
        "colorful-titlebar.projectIndicators": {
          "type": "array",
          "default": [
            ".git",
            "package.json",
            "pom.xml",
            "Cargo.toml",
            "go.mod",
            "README.md",
            "LICENSE",
            "tsconfig.json",
            "yarn.lock",
            "pnpm-lock.yaml",
            "package-lock.json",
            "webpack.config.js",
            "vite.config.js",
            "vite.config.ts",
            "next.config.js",
            "pyproject.toml",
            "setup.py",
            "CMakeLists.txt",
            "Makefile",
            "build.gradle",
            "composer.json",
            "Gemfile",
            ".nvmrc",
            ".node-version",
            "Deno.json",
            "deno.jsonc"
          ],
          "description": "File or directory names(will not trim) that indicate a project directory.",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "build": "rimraf out && rollup -c",
    "watch": "tsc -watch -p ./",
    "test": "tsx tests/index.test.ts",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.7",
    "@babel/plugin-proposal-decorators": "^7.27.1",
    "@babel/plugin-syntax-class-properties": "^7.12.13",
    "@babel/plugin-transform-classes": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.30.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.3",
    "@types/node": "^24.0.4",
    "@types/vscode": "^1.74.0",
    "eslint": "^9.30.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.44.1",
    "rollup-plugin-dts": "^6.2.1",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  }
}