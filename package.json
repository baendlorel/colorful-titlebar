{
  "name": "colorful-titlebar",
  "displayName": "Colorful Titlebar",
  "description": "A VS Code extension that adds backgroudColor(generated by your project name) to the title bar",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Themes"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "colorful-titlebar.enable",
        "title": "Enable Gradient Titlebar"
      },
      {
        "command": "colorful-titlebar.disable",
        "title": "Disable Gradient Titlebar"
      },
      {
        "command": "colorful-titlebar.configure",
        "title": "Configure Gradient Titlebar"
      }
    ],
    "configuration": {
      "title": "Idea Gradient Titlebar",
      "properties": {
        "colorful-titlebar.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the gradient titlebar effect"
        },
        "colorful-titlebar.gradientColors": {
          "type": "array",
          "default": [
            "#667eea",
            "#764ba2"
          ],
          "description": "Colors for the gradient effect",
          "items": {
            "type": "string"
          }
        },
        "colorful-titlebar.direction": {
          "type": "string",
          "enum": [
            "horizontal",
            "vertical",
            "diagonal"
          ],
          "default": "horizontal",
          "description": "Direction of the gradient"
        },
        "colorful-titlebar.opacity": {
          "type": "number",
          "default": 0.8,
          "minimum": 0,
          "maximum": 1,
          "description": "Opacity of the gradient effect"
        }
      }
    }
  },
  "scripts": {
    "build": "rimraf out && rollup -c",
    "watch": "tsc -watch -p ./",
    "test": "tsx tests/index.test.ts",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.27.2",
    "@babel/core": "^7.27.7",
    "@babel/plugin-proposal-decorators": "^7.27.1",
    "@babel/plugin-syntax-class-properties": "^7.12.13",
    "@babel/plugin-transform-classes": "^7.27.7",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.30.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.3",
    "@types/node": "^24.0.4",
    "@types/vscode": "^1.74.0",
    "eslint": "^9.30.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.44.1",
    "rollup-plugin-dts": "^6.2.1",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1"
  }
}